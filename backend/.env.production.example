# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env in production and fill in actual values
# NEVER commit actual production credentials to version control

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================
# MongoDB Atlas connection string (recommended for production)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/vibe-holidays-prod?retryWrites=true&w=majority

# ============================================
# JWT Configuration
# ============================================
# Generate a strong random secret (use: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=7d

# ============================================
# Email Configuration (SMTP)
# ============================================
# For Gmail: Use App Password (not regular password)
# For SendGrid: Use API key as password
# For AWS SES: Configure with AWS credentials
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@vibeholidays.com
ADMIN_EMAIL=admin@vibeholidays.com

# ============================================
# CORS Configuration
# ============================================
# Production frontend URL(s) - comma-separated for multiple domains
# Example: https://vibeholidays.com,https://www.vibeholidays.com
FRONTEND_URL=https://your-production-domain.com

# ============================================
# Rate Limiting
# ============================================
# Window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size in bytes (5MB default)
MAX_FILE_SIZE=5242880
# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ============================================
# Logging Configuration
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Enable detailed error logging
ENABLE_ERROR_LOGGING=true

# ============================================
# Security Configuration
# ============================================
# Enable HTTPS redirect (set to true if using SSL)
FORCE_HTTPS=true
# Session secret for additional security
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_SECRET

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=
# Google Analytics ID
GA_TRACKING_ID=

# ============================================
# Backup Configuration (Optional)
# ============================================
# S3 bucket for file backups
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

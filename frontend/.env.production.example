# ============================================
# PRODUCTION ENVIRONMENT VARIABLES - FRONTEND
# ============================================
# Copy this file to .env.production and fill in actual values
# Note: Vite exposes variables prefixed with VITE_ to the client

# ============================================
# API Configuration
# ============================================
# Production backend API URL (without trailing slash)
VITE_API_URL=https://api.vibeholidays.com/api

# ============================================
# Application Configuration
# ============================================
# Application name
VITE_APP_NAME=Vibe Holidays
# Application version
VITE_APP_VERSION=1.0.0

# ============================================
# Feature Flags (Optional)
# ============================================
# Enable/disable features in production
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_SUPPORT=false

# ============================================
# Third-Party Services (Optional)
# ============================================
# Google Maps API Key (for contact page map)
VITE_GOOGLE_MAPS_API_KEY=

# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=

# Facebook Pixel ID
VITE_FACEBOOK_PIXEL_ID=

# ============================================
# SEO Configuration
# ============================================
# Default meta description
VITE_META_DESCRIPTION=Discover amazing holiday packages with Vibe Holidays. Book your dream vacation today!
# Default meta keywords
VITE_META_KEYWORDS=holidays,travel,vacation,packages,booking

# ============================================
# Contact Information
# ============================================
# Display contact information
VITE_CONTACT_EMAIL=info@vibeholidays.com
VITE_CONTACT_PHONE=+1-234-567-8900
VITE_CONTACT_ADDRESS=123 Travel Street, City, Country

# ============================================
# Social Media Links
# ============================================
VITE_FACEBOOK_URL=https://facebook.com/vibeholidays
VITE_INSTAGRAM_URL=https://instagram.com/vibeholidays
VITE_TWITTER_URL=https://twitter.com/vibeholidays
VITE_LINKEDIN_URL=https://linkedin.com/company/vibeholidays
